<!doctype html>
<html>
  <head>
    <title>Movie Details</title>
  </head>
  <body>
    <div>
      <a href='/'><button action='/'>Home</button></a>
      <a href='/favorites'><button>Favorite Movies</button></a>
      <a href='#'><button>About</button></a>
      <a href='#'><button>Contact</button></a>
    </div>
    
      <h1><%= movieDetails.Title %></h1><br>
      <form method="post" action="/movies">
        <input type='hidden' value='<%=movieDetails.imdbID%>' name='movie[ID]'>
        <input type='hidden' value='<%=movieDetails.Title%>' name='movie[Title]'>
        <input type='submit' value='Favorite This Movie'><br>
    </form>
    <div>
      <img src="<%= movieDetails.Poster%>"><br>
    </div>
    <ul>
      <% for (key in movieDetails) { %>
        <% if (key !== "Title" && key !== "Poster") { %>
        <li>
          <%= key %>: <%= movieDetails[key] %><br>
        </li>
        <% } %>
      <% }; %>
    </ul>
  </body>
</html>